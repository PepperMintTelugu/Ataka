# Ataka - The Ultimate Bookstore
# Production Environment Configuration

# Application Settings
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_APP_NAME="Ataka - The Ultimate Bookstore"
REACT_APP_APP_DESCRIPTION="Telugu Literature Online Store"
REACT_APP_APP_VERSION=1.0.0

# Razorpay Payment Gateway
REACT_APP_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
REACT_APP_RAZORPAY_KEY_SECRET=xxxxxxxxxx

# Shiprocket Integration
REACT_APP_SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external
REACT_APP_SHIPROCKET_EMAIL=your-email@ataka.com
REACT_APP_SHIPROCKET_PASSWORD=your-password
REACT_APP_SHIPROCKET_TOKEN=your-shiprocket-token

# Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
REACT_APP_GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
REACT_APP_FACEBOOK_PIXEL_ID=xxxxxxxxxx

# Image Upload
REACT_APP_CLOUDINARY_CLOUD_NAME=your-cloudinary-name
REACT_APP_CLOUDINARY_API_KEY=your-cloudinary-key
REACT_APP_CLOUDINARY_API_SECRET=your-cloudinary-secret

# Email Service (Optional)
REACT_APP_EMAILJS_SERVICE_ID=service_xxxxxxx
REACT_APP_EMAILJS_TEMPLATE_ID=template_xxxxxxx
REACT_APP_EMAILJS_PUBLIC_KEY=your-emailjs-public-key

# SMS Service (Optional)
REACT_APP_SMS_API_KEY=your-sms-api-key
REACT_APP_SMS_SENDER_ID=ATAKA

# SEO and Social
REACT_APP_SITE_URL=https://yourdomain.com
REACT_APP_SOCIAL_TWITTER=@atakabooks
REACT_APP_SOCIAL_FACEBOOK=atakabooks
REACT_APP_SOCIAL_INSTAGRAM=atakabooks

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
